@model Projeto.Presentation.Mvc.Models.AccountLoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Acesso ao Sistema</title>

    <!-- Folhas de estilo CSS (Bootstrap) -->
    <link href="~/css/bootstrap.css" rel="stylesheet" />

</head>
<body>

    <div class="container">

        <h3>Login de Usuários</h3>
        Preencha os campos para obter acesso ao sistema.
        <hr />

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger">
                <strong>@TempData["MensagemErro"]</strong>
            </div>
        }

        @using (Html.BeginForm())
        {
            <label>Email de Acesso:</label>
            @Html.TextBoxFor(model => model.Email,
                new
                {
                    @class = "form-control col-md-4",
                    @placeholder = "Digite aqui"
                })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Email)
            </span>
            <br />

            <label>Senha de Acesso:</label>
            @Html.PasswordFor(model => model.Senha,
                new
                {
                    @class = "form-control col-md-4",
                    @placeholder = "Digite aqui"
                })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Senha)
            </span>
            <br />

            <input type="submit" value="Acessar Sistema"
                   class="btn btn-dark" />
        }

        <br />
        <br />

        <p>
            Não possui conta de usuário? <br />
            <a href="/Account/Register">Clique aqui e cadastre-se!</a>
        </p>

    </div>

    <!-- Arquivos javascript -->
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>

</body>
</html>
